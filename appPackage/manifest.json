{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/termofuse",
        "termsOfUseUrl": "https://www.example.com/privacy"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "preview-me-${{TEAMSFX_ENV}}",
        "full": "full name for preview-me"
    },
    "description": {
        "short": "short description of preview-me",
        "full": "full description of preview-me"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": ["personal", "team", "groupChat"],
            "isNotificationOnly": false,
            "supportsCalling": false,
            "supportsVideo": false,
            "supportsFiles": false
        }
    ],
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "commands": [
                {
                    "id": "TestCard",
                    "type": "action",
                    "title": "Test Card",
                    "description": "Test Adaptive Card Preview",
                    "initialRun": true,
                    "fetchTask": true,
                    "context": ["commandBox", "compose"],
                    "taskInfo": {
                        "title": "Test Card",
                        "width": "medium",
                        "height": "medium",
                        "url": "https://teams.microsoft.com"
                    }
                }
            ],
            "canUpdateConfiguration": true
        }
    ],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}